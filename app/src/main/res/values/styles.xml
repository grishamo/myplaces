<resources>

    <style name="NoHeader" parent="Theme.AppCompat.Light.NoActionBar" />

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="Header">
        <item name="android:background">#272b2c</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="Tabs">
        <item name="android:background">#2b3133</item>
        <item name="android:color">#ffffff</item>
    </style>

    <style name="NoHeader.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="NoHeader.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="PlaceButtonStyle">
        <item name="android:layout_marginHorizontal">5dp</item>
        <item name="android:layout_width">55dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:background">@drawable/circle_shape_icon_background</item>
    </style>

    <style name="PlaceInfoFormCell">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:layout_margin">10dp</item>
    </style>

</resources>
