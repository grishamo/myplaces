<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/place_google_iv"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="5dp"
        android:scaleType="centerCrop"
        android:src="@drawable/default_image" />

    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/location_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/ic_location_on_grey_24dp"
            android:hint="@string/location" />

        <TextView
            android:id="@+id/place_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/ic_border_color_black_24dp"
            android:hint="@string/untitled" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/category_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:drawableStart="@drawable/ic_format_list_bulleted_black_24dp" />

            <Spinner
                android:id="@+id/choosen_category_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/category_tv"
                android:drawableStart="@drawable/ic_format_list_bulleted_black_24dp" />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/edit_description_btn"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginStart="30dp"
            android:background="@drawable/popup_edit_btn"
            android:src="@drawable/ic_edit_main_color_24dp" />

        <ImageButton
            android:id="@+id/share_btn"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginStart="70dp"
            android:background="@drawable/popup_share_btn"
            android:src="@drawable/ic_share_main_color_24dp"/>

        <Button
            android:id="@+id/save_btn"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@id/share_btn"
            android:background="@drawable/main_button_background"
            android:paddingEnd="20dp"
            android:paddingStart="20dp"
            android:text="@string/save"
            android:textColor="#ffffff" />

    </LinearLayout>

</LinearLayout>