<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/main_image"
        android:layout_width="match_parent"
        android:layout_height="150dp" />

    <ScrollView
        android:layout_below="@+id/main_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/location_et"
                android:drawablePadding="5dp"
                android:text="Place Location"
                android:drawableStart="@drawable/ic_location_on_grey_24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:drawableStart="@drawable/ic_mode_edit_black_24dp"
                android:text="Current"
                android:drawablePadding="5dp"
                android:id="@+id/title_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/description_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="true">

                <LinearLayout
                    android:id="@+id/images_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/add_image_ib"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_toEndOf="@+id/taken_picture_iv"
                        android:src="@drawable/ic_add_a_photo_black_24dp" />
                </LinearLayout>
            </HorizontalScrollView>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/save_place_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/main_button_background"
        android:paddingEnd="40dp"
        android:paddingStart="40dp"
        android:text="@string/save_place_txt"
        android:textColor="#ffffff" />

</RelativeLayout>
    